@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using VivesRental.Authentication
@using VivesRental.Blazor.Security
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IBearerTokenStore TokenStore
@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg navbar-dark dark-red-bg">
    <div class="container-fluid">
        <a class="navbar-brand text-white" href="@AppRoutes.Home.Index">
            <img src="logo.png" alt="VivesRental" style="height: 30px; margin-right: 10px;" />
            Dashboard
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <AuthorizeView>
                    <Authorized>
                        <li class="nav-item d-flex align-items-center">
                            @{
                                var username = string.Empty;
                                if (context.User.HasClaim(c => c.Type == "sub"))
                                {
                                    username = context.User.Claims.First(c => c.Type == "sub").Value;
                                }
                                @: @username
                            }
                        </li>
                        <li class="nav-item">
                            <button class="nav-link text-white btn btn-link" @onclick="SignOut">Logout</button>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@AppRoutes.Account.SignIn">Sign in</a>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    @Body
</div>

@code
{
    private async Task SignOut()
    {
        TokenStore.SetToken(string.Empty);
        ((TokenAuthenticationStateProvider)AuthenticationStateProvider).MarkUserAsLoggedOut();
        NavigationManager.NavigateTo(AppRoutes.Account.SignIn, true);
    }
}














































































































































































































































































































































































































































































































































































































































































































































