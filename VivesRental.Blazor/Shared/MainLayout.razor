@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using VivesRental.Authentication
@using VivesRental.Blazor.Security
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IBearerTokenStore TokenStore
@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg navbar-dark dark-red-bg">
    <div class="container-fluid">
        <a class="navbar-brand text-white" href="@AppRoutes.Home.Index">VivesRental</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link text-white" href="@AppRoutes.Home.Index">Dashboard</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-white" href="@AppRoutes.Customers.Index">Customer Management</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-white" href="@AppRoutes.Articles.Index">Article Management</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-white" href="@AppRoutes.Rentals.Index">Rental Information</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-white" href="@AppRoutes.Orders.Index">New Rental Order</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link text-white" href="@AppRoutes.Returns.Index">Return Order</NavLink>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <AuthorizeView>
                    <Authorized>
                        <li class="nav-item">
                            <span class="nav-link text-white">@context.User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link text-white btn btn-link" @onclick="Logout">Logout</button>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <li class="nav-item">
                            <NavLink class="nav-link text-white" href="@AppRoutes.Account.SignIn">Sign In</NavLink>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    @Body
</div>

<footer class="bg-dark text-white text-center py-3 mt-4 fixed-bottom">
    <div class="container">
        <p>&copy; 2023 VivesRental. All rights reserved.</p>
    </div>
</footer>

@code {
    private void Logout()
    {
        TokenStore.SetToken(string.Empty);
        ((TokenAuthenticationStateProvider)AuthenticationStateProvider).AuthenticateUser();
        NavigationManager.NavigateTo(AppRoutes.Account.SignIn);
    }
}
















































































